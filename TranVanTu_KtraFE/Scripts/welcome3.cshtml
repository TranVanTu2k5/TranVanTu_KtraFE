@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<html>
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <script language="Javascript">
        function layDiaChiGiaoHang() {
            let diaChi = document.getElementById("diaChiInput").value;

            let diaChiGiaoHang = diaChi;

            document.getElementById("GiaoDen").textContent = diaChiGiaoHang;
        }
    </script>
</head>
<body>
    <form>
        <input type="text" id="diaChiInput" placeholder="Nhập địa chỉ giao hàng">
        <div id="GiaoDen">Địa chỉ sẽ hiển thị ở đây</div>
        <button onclick="layDiaChiGiaoHang()">Lấy địa chỉ</button>
    </form>
</body>
</html>

